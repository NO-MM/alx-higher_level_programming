#include <stdio.h>
#include <stdlib.h>
#include "lists.h"
#include <unistd.h>
/**
 * insert_node - A function that insert a number into a sorted list.
 * @head: A linked list.
 * @number: A number to be inserted.
 *
 * Return: Pointer to the new head.
 */
listint_t *insert_node(listint_t **head, int number)
{
listint_t *current = *head;
listint_t *new = NULL;
listint_t *temp = NULL;
if (!head)
return (NULL);
new = malloc(sizeof(listint_t));
if (!new)
return (NULL);
new->next = number;
new->next = NULL;
if (!*head || (*head)->n > number)
{
new-> = *head;
return (*head = new);
}
else
{
while (current && current ->n < number)
{
temp = current;
current = current->next;
}
temp->next = new;
new->next = current;
}
return (new);
}
